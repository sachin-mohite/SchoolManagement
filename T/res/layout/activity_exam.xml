<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ExamActivity" >

    <TextView
        android:id="@+id/textViewATStandard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="Standard"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText
        android:id="@+id/editTextATAttendence"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textViewATStandard"
        android:layout_toRightOf="@+id/textViewATStandard"
        android:ems="10" />

    <TextView
        android:id="@+id/textViewATDivision"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textViewATStandard"
        android:layout_below="@+id/editTextATAttendence"
        android:text="Division"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText
        android:id="@+id/editTextATDivision"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editTextATAttendence"
        android:layout_below="@+id/editTextATAttendence"
        android:ems="10" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/textViewExamEventId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/editTextATDivision"
        android:text="Exam/EventID"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText
        android:id="@+id/editTextATExtID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextATDivision"
        android:layout_toRightOf="@+id/textViewExamEventId"
        android:ems="10" />

    <EditText
        android:id="@+id/editTextATStartDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textViewATStartDate"
        android:layout_alignBottom="@+id/textViewATStartDate"
        android:layout_toRightOf="@+id/textViewExamEventId"
        android:ems="10" />

    <TextView
        android:id="@+id/textViewATStartDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textViewExamEventId"
        android:layout_below="@+id/editTextATExtID"
        android:text="Start Date"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/textViewATEndDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textViewATStartDate"
        android:layout_below="@+id/editTextATStartDate"
        android:layout_marginTop="14dp"
        android:text="End Date"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText
        android:id="@+id/editTextEndDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editTextATStartDate"
        android:layout_alignTop="@+id/textViewATEndDate"
        android:ems="10" />

    <TextView
        android:id="@+id/textViewATCDID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/editTextEndDate"
        android:text="CD ID"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText
        android:id="@+id/editTextATCDID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextEndDate"
        android:layout_toRightOf="@+id/textViewExamEventId"
        android:ems="10" />

    <Button
        android:id="@+id/buttonATSubmitAss"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextATCDID"
        android:text="Submit" />

    <Button
        android:id="@+id/buttonATCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/editTextATCDID"
        android:layout_below="@+id/editTextATCDID"
        android:text="Cancel" />

    <Button
        android:id="@+id/buttonATReset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/buttonATCancel"
        android:layout_alignBottom="@+id/buttonATCancel"
        android:layout_alignLeft="@+id/editTextATCDID"
        android:text="Reset" />

</RelativeLayout>
