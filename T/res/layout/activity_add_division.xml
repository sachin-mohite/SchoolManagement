<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".AddDivisionActivity" >

    <TextView
        android:id="@+id/textViewDivID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="Division ID"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText
        android:id="@+id/editTextDivID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textViewDivID"
        android:layout_alignTop="@+id/textViewDivID"
        android:layout_toRightOf="@+id/textViewDivID"
        android:ems="10" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/textViewDivName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textViewDivID"
        android:text="Name"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText
        android:id="@+id/editTextDivName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textViewDivName"
        android:layout_alignTop="@+id/textViewDivName"
        android:layout_toRightOf="@+id/textViewDivID"
        android:ems="10" />

    <TextView
        android:id="@+id/textViewDivCapacity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textViewDivName"
        android:layout_below="@+id/textViewDivName"
        android:text="Capacity"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText
        android:id="@+id/editTextSubID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textViewDivCapacity"
        android:layout_alignLeft="@+id/editTextDivName"
        android:layout_below="@+id/editTextDivName"
        android:ems="10"
        android:inputType="number" />

    <Button
        android:id="@+id/buttonDivSubmit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textViewDivCapacity"
        android:layout_below="@+id/textViewDivCapacity"
        android:layout_marginTop="24dp"
        android:text="Submit" />

    <Button
        android:id="@+id/buttonDivReset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/buttonDivSubmit"
        android:layout_alignBottom="@+id/buttonDivSubmit"
        android:layout_centerHorizontal="true"
        android:text="Reset" />

    <Button
        android:id="@+id/buttonDivCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/buttonDivReset"
        android:layout_alignBottom="@+id/buttonDivReset"
        android:layout_alignRight="@+id/editTextSubID"
        android:text="Cancel" />

</RelativeLayout>
