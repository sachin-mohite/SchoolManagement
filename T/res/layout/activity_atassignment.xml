<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ATAssignmentActivity" >

    <TextView
        android:id="@+id/textViewATAttendence"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="Standard"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText
        android:id="@+id/editTextATAttendence"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textViewATAttendence"
        android:layout_toRightOf="@+id/textViewATAttendence"
        android:ems="10" />

    <TextView
        android:id="@+id/textViewATDivision"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textViewATAttendence"
        android:layout_below="@+id/editTextATAttendence"
        android:text="Division"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText
        android:id="@+id/editTextATDivision"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editTextATAttendence"
        android:layout_below="@+id/editTextATAttendence"
        android:ems="10" />

    <Button
        android:id="@+id/buttonATSubmitAss"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textViewATDivision"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="40dp"
        android:text="Submit" />

    <TextView
        android:id="@+id/textViewATAssID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/editTextATDivision"
        android:text="Assignment ID"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText
        android:id="@+id/editTextATAssID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextATDivision"
        android:layout_toRightOf="@+id/textViewATAssID"
        android:ems="10" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/textViewATSubject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/editTextATAssID"
        android:text="Subject"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText
        android:id="@+id/editTextATSuject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textViewATSubject"
        android:layout_toRightOf="@+id/textViewATAssID"
        android:ems="10" />

    <TextView
        android:id="@+id/textViewATStartDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/editTextATSuject"
        android:text="Start Date"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText
        android:id="@+id/editTextATStartDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editTextATSuject"
        android:layout_below="@+id/editTextATSuject"
        android:ems="10" />

    <TextView
        android:id="@+id/textViewATSubmitDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/editTextATStartDate"
        android:text="Submit Date"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText
        android:id="@+id/editTextSubmitDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editTextATStartDate"
        android:layout_alignTop="@+id/textViewATSubmitDate"
        android:ems="10" />

    <TextView
        android:id="@+id/textViewATType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textViewATSubmitDate"
        android:layout_below="@+id/editTextSubmitDate"
        android:text="Type"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText
        android:id="@+id/editTextATType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editTextSubmitDate"
        android:layout_alignTop="@+id/textViewATType"
        android:ems="10" />

    <TextView
        android:id="@+id/textViewATDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textViewATType"
        android:layout_below="@+id/editTextATType"
        android:text="Description"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText
        android:id="@+id/editTextATDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textViewATDescription"
        android:layout_toRightOf="@+id/textViewATAssID"
        android:ems="10"
        android:inputType="textMultiLine" />

    <Button
        android:id="@+id/buttonATCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/buttonATReset"
        android:layout_alignBottom="@+id/buttonATReset"
        android:layout_alignRight="@+id/editTextATDescription"
        android:text="Cancel" />

    <Button
        android:id="@+id/buttonATReset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/buttonATSubmitAss"
        android:layout_alignBottom="@+id/buttonATSubmitAss"
        android:layout_centerHorizontal="true"
        android:text="Reset" />

</RelativeLayout>
