<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".AllocateSubjectActivity" >

    <TextView
        android:id="@+id/textViewATAttendence"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="Standard"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText
        android:id="@+id/editTextATAttendence"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textViewATAttendence"
        android:layout_toRightOf="@+id/textViewATAttendence"
        android:ems="10" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/editTextATDivision"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textViewATDivision"
        android:layout_alignLeft="@+id/editTextATAttendence"
        android:layout_alignTop="@+id/textViewATDivision"
        android:ems="10" />

    <TextView
        android:id="@+id/textViewASSubject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textViewATDivision"
        android:text="Subject"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/textViewATDivision"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textViewASSubject"
        android:layout_below="@+id/textViewATAttendence"
        android:text="Division"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText
        android:id="@+id/editTextASSubject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textViewASSubject"
        android:layout_alignLeft="@+id/editTextATDivision"
        android:layout_alignTop="@+id/textViewASSubject"
        android:ems="10" />

    <Button
        android:id="@+id/buttonASAddSubject"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textViewASSubject"
        android:text="+" />

    <Button
        android:id="@+id/buttonASSubmit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/buttonASAddSubject"
        android:layout_marginTop="16dp"
        android:text="Submit" />

    <Button
        android:id="@+id/buttonASReset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/buttonASSubmit"
        android:layout_alignBottom="@+id/buttonASSubmit"
        android:layout_centerHorizontal="true"
        android:text="Reset" />

    <Button
        android:id="@+id/buttonASCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/buttonASReset"
        android:layout_alignBottom="@+id/buttonASReset"
        android:layout_alignRight="@+id/editTextASSubject"
        android:text="Cancel" />

</RelativeLayout>
