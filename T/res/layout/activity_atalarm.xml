<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ATAlarmActivity" >

    <TextView
        android:id="@+id/textViewATStandard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="Standard"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText
        android:id="@+id/editTextATStandard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textViewATStandard"
        android:layout_toRightOf="@+id/textViewATStandard"
        android:ems="10" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/textViewATDivision"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/editTextATStandard"
        android:text="Division"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText
        android:id="@+id/editTextATDivision"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editTextATStandard"
        android:layout_alignTop="@+id/textViewATDivision"
        android:ems="10" />

    <TextView
        android:id="@+id/textViewATEventID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textViewATDivision"
        android:layout_below="@+id/editTextATDivision"
        android:text="Event ID"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText
        android:id="@+id/editTextATEventID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textViewATEventID"
        android:layout_toRightOf="@+id/textViewATStandard"
        android:ems="10" />

    <TextView
        android:id="@+id/textViewATEventName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/editTextATEventID"
        android:text="Name"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText
        android:id="@+id/editTextATEventName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editTextATEventID"
        android:layout_alignTop="@+id/textViewATEventName"
        android:ems="10" />

    <TextView
        android:id="@+id/textViewATDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/editTextATEventName"
        android:text="Description"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText
        android:id="@+id/editTextATDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textViewATDescription"
        android:layout_alignBottom="@+id/textViewATDescription"
        android:layout_marginLeft="14dp"
        android:layout_toRightOf="@+id/textViewATDescription"
        android:ems="10"
        android:inputType="textMultiLine" />

    <Button
        android:id="@+id/buttonATCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/buttonATReset"
        android:layout_alignBottom="@+id/buttonATReset"
        android:layout_alignRight="@+id/editTextATEventName"
        android:text="Cancel" />

    <Button
        android:id="@+id/buttonATReset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="Reset" />

    <Button
        android:id="@+id/buttonATSubmitAss"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textViewATDescription"
        android:layout_centerVertical="true"
        android:text="Submit" />

</RelativeLayout>
