<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".AttendenceActivity" >

    <TextView
        android:id="@+id/textViewATAttendence"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="Standard"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText
        android:id="@+id/editTextATAttendence"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textViewATAttendence"
        android:layout_toRightOf="@+id/textViewATAttendence"
        android:ems="10" />

    <TextView
        android:id="@+id/textViewATDivision"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textViewATAttendence"
        android:layout_below="@+id/editTextATAttendence"
        android:text="Division"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText
        android:id="@+id/editTextATDivision"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textViewATDivision"
        android:layout_alignBottom="@+id/textViewATDivision"
        android:layout_toRightOf="@+id/textViewATAttendence"
        android:ems="10" />

    <Button
        android:id="@+id/buttonATSubmitAss"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextATDivision"
        android:layout_marginTop="25dp"
        android:text="Show Student" />

    <Button
        android:id="@+id/buttonATReset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/buttonATSubmitAss"
        android:layout_alignBottom="@+id/buttonATSubmitAss"
        android:layout_toRightOf="@+id/buttonATSubmitAss"
        android:text="Reset" />

    <Button
        android:id="@+id/buttonATCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/buttonATReset"
        android:layout_alignBottom="@+id/buttonATReset"
        android:layout_toRightOf="@+id/buttonATReset"
        android:text="Cancel" />

</RelativeLayout>
